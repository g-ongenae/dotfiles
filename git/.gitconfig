[github]
	user = g-ongenae

[alias]
	a = add
	amend = commit --amend
	apply = stash apply
	b = branch
	br = checkout -b
	c = commit
	cm = commit -m
	co = checkout
	ci = ci-status HEAD
	contrib = shortlog --summary --numbered
	d = "!sh -c \"git rebase --onto '$1^' '$1'\" -" # To delete a commit based on its sha
	de = "!f() { open -a 'github desktop'; }; f" # To open GitHub Desktop
	df = diff --word-diff # To show diff by words
	dl = "!sh -c \"git reset HEAD~'$1'\" -" # To delete last (n) commit
	f = flow
	ff = flow feature
	fh = flow hotfix
	fix = commit --amend --no-edit
	h = help
	i = init
	l = log --oneline -n 10
	ld = "!sh -c \"git log --since '${1:-1} days ago' --oneline --author $(git config user.email)\" -"
	log = log -n 10
	ls = stash list
	p = push
	pop = stash pop
	pr = "!f() { git fetch -fu ${2:-origin} refs/pull/$1/head:pr/$1 && git checkout pr/$1; }; f"
	ri = "!f() { mv .git ~/.Trash && git init; }; f"
	show-ignored = "! git clean -ndX | perl -pe 's/Would remove/Ignored:/'"
	squash = rebase -i
	st = status
	save = stash save
	unset = checkout --
	unstage = checkout -- HEAD
	unstage-hard = reset --hard HEAD

[color]
	ui = auto
[color "branch"]
	current = yellow reverse
	local = yellow
	remote = green
[color "diff"]
	meta = yellow bold
	frag = magenta bold
	old = red bold
	new = green bold
[color "status"]
	added = yellow
	changed = green
	untracked = cyan
[color "diff-highlight"]
	oldNormal = red bold
	oldHighlight = red bold 52
	newNormal = green bold
	newHighlight = green bold 22
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
[core]
	excludesfile = ~/Documents/prog/dotfiles/git/.gitignore_global
